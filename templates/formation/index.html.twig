{% extends 'base.html.twig' %}


{% block body %}
    <main class="main-xp">
            <div class="skills">
                <h2>Skills</h2>
                <div class="all-skills">
                    <img src="images/html.png" alt="html logo">
                    <img src="images/css.png" alt="css logo">
                    <img src="images/symfony.svg" alt="symfony logo">
                    <img src="images/php.png" alt="php logo">
                    <img src="images/wp.png" alt="wordpress logo">
                    <img src="images/js.png" alt="js logo">
                    <img src="images/git.png" alt="git logo">
                    <img src="images/MySQL.png" alt="mysql logo">
                </div>
            </div>
            <div class="xps">
                <h2>Exp√©riences</h2>
                <div class="scroll-el">
                {% for project in projects %}
                <div class="projects">
                    <h3>{{ project.name }}</h3>
                    <p>{{ project.description|nl2br }}</p>
                    <p><a href="{{ project.link }}" target="_blank">Projet</a></p>
                </div>
                {% endfor %}
                </div>
            </div>
            <div class="formations">
                <h2>Formations</h2>
                <div class="scroll-ele">
                {% for school in formation %}
                <div class="school">
                    <h3>{{ school.name }}</h3>
                    <p class="date">{{ school.periode }}</p>
                    <p>{{ school.title }}</p>
                    <p>{{ school.description|nl2br }}</p>
                </div>
                {% endfor %}
            </div>
            </div>
        </main>
{% endblock %}
